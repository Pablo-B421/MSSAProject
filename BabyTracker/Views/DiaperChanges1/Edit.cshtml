@model BabyTracker.Models.DiaperChange

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DiaperChange</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiaperChangeID" />
            <div class="form-group">
                <label asp-for="NumberofDiaperChanges" class="control-label"></label>
                <input asp-for="NumberofDiaperChanges" class="form-control" />
                <span asp-validation-for="NumberofDiaperChanges" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BabyName" class="control-label"></label>
                <select asp-for="BabyName" class="form-control" asp-items="ViewBag.BabyName"></select>
                <span asp-validation-for="BabyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Diaper Changes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
